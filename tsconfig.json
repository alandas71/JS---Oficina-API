{
  "exclude": ["./coverage", "./dist", "src/__tests__", "jest.config.js", "**/*.test.ts", "**/*.spec.ts",
],
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      },
      "resolveJsonModule": true
  },
  "include": ["./src/**/*", "src/__tests__"]
  }